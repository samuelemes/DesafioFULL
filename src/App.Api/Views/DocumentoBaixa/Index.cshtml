@model IEnumerable<App.Api.ViewModels.DocumentoViewModel>

@{
    ViewBag.Title = "Lista de Títulos";
}

<h2>Index</h2>

<div>
    <a href="@Url.Action("Create")" class="btn btn-primary">Novo</a><br /><br />
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Número")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pessoa.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.QtdeParcelas)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ValorOriginal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DiasEmAtrado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ValorAtualizado)
        </th>        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Pessoa.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.QtdeParcelas)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DocumentoOrigem.Valor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DiasEmAtrado)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ValorAtualizado)
        </td>
        
        <td>
            <a href="@Url.Action("Edit","Documentos", new { id = item.Id})" class="btn btn-warning">Editar</a>
            <a href="@Url.Action("Details","Documentos", new { id = item.Id})" class="btn btn-primary">Detalhes</a>
            <a href="@Url.Action("Create","Documentos", new { id = item.Id})" class="btn btn-primary">Baixar</a>
            <a href="@Url.Action("Delete","Documentos", new { id = item.Id})" class="btn btn-danger">Excluir</a>
        </td>
    </tr>
}

</table>
